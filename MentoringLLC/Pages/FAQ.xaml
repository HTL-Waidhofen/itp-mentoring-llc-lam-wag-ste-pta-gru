<Page x:Class="MentoringLLC.Pages.FAQ"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MentoringLLC.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FAQ">

    <Viewbox>
        <Canvas Width="800" Height="450">
            <TextBox x:Name="Headline" Height="100" Canvas.Left="200" Canvas.Top="10" FontSize="70" TextAlignment="Center" IsReadOnly="True" Width="400" >FAQ</TextBox>

            <ListBox  x:Name="listbQuestions" Width="600" Height="280" Canvas.Left="100" Canvas.Top="150" MouseDown="OpenQuestions"  />
        </Canvas>
    </Viewbox>
</Page>
