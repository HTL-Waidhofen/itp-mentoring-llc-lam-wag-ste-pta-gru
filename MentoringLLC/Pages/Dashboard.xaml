<Page x:Class="MentoringLLC.Pages.Dashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MentoringLLC.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Dashboard">
    <Viewbox>
        <Canvas Width="800" Height="450">
            <!-- 1: Name -->
            <TextBox Text="" x:Name="Mname" Height="100" Width="300" FontSize="70" TextAlignment="Center" IsReadOnly="True" Canvas.Left="250" Canvas.Top="28"></TextBox>
            <!-- 2: Fächer, Mentoren -->
            <ListBox x:Name="Faecher" Height="250" Width="300" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Top="152" Canvas.Left="10"></ListBox>
            <ListBox x:Name="Angebote" Height="250" Width="300" Canvas.Left="490" Canvas.Top="152"></ListBox>
        </Canvas>
    </Viewbox>

</Page>
