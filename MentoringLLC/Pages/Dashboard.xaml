<Page x:Class="MentoringLLC.Pages.Dashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MentoringLLC.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Dashboard">

    <DockPanel LastChildFill="False">
        <!-- 1: Name -->
        <StackPanel Orientation="Horizontal" Height="150" DockPanel.Dock="Top">

            <StackPanel Width="200" Orientation="Horizontal">
                
            </StackPanel>

            <StackPanel  Width="400">
                <TextBox x:Name="Mname" Height="100" FontSize="70" TextAlignment="Center" IsReadOnly="True" ></TextBox>
            </StackPanel >

        </StackPanel >

        <!-- 2: Fächer, Mentoren -->
        <StackPanel DockPanel.Dock="Top" Height="250" Orientation="Horizontal">
            <StackPanel Width="400">
                <ListBox x:Name="Faecher" Height="250" Width="300" ></ListBox>
            </StackPanel>
            <StackPanel Width="400">
                <ListBox x:Name="Angebote" Height="250" Width="300" ></ListBox>
            </StackPanel>


        </StackPanel>
        <!--3: Void  -->
        <StackPanel DockPanel.Dock="Top" Height="100"></StackPanel>
    </DockPanel>
</Page>
