<Page x:Class="MentoringLLC.Pages.Profilviewer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MentoringLLC.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Profilviewer">

    <Viewbox>
        <Canvas Width="800" Height="450">
            <!-- 1: Profilbild, Name + Buttons -->
            <Image Height="100" Width="100" Canvas.Left="20" Canvas.Top="10"  ></Image>

            <TextBox x:Name="Mname" Width="400" Height="100" Canvas.Left="200" Canvas.Top="10" FontSize="70" TextAlignment="Center" IsReadOnly="True" ></TextBox>
            <!-- Stackpanel für Icons -->
            <StackPanel Height="50" Width="400" Canvas.Left="200" Canvas.Top="110" ></StackPanel>

            <!-- 2: Fächer, Termine -->

            <ListBox x:Name="Faecher" Height="250" Width="300" Canvas.Left="20" Canvas.Top="160"></ListBox>

            <ListBox x:Name="Termine" Height="250" Width="350" Canvas.Left="430" Canvas.Top="160"></ListBox>

        </Canvas>
    </Viewbox>
</Page>
